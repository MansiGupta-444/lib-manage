<% layout("/layouts/boilarplate") %>

<div class="container mt-4">


  <div class="row mb-4">
    <div class="col text-center">
      <h3 class="fw-bold border-bottom pb-2">ðŸ“š Book Details</h3>
    </div>
  </div>

 
 <div class="card mx-auto shadow-lg border-0" style="width: 30rem; border-radius: 1rem;">
  <div class="text-center" style="height: 20rem; overflow: hidden;">
    <img src="<%= listing.image.url %>" 
         alt="<%= listing.title %>" 
         style="height: 100%; width: auto; object-fit: contain; display: inline-block; ">
  </div>

  <div class="card-body text-center">
    <h4 class="card-title fw-bold"><%= listing.title %></h4>
    <p class="text-muted mb-1"><%= listing.author %></p>
    <p class="mb-2"><%= listing.description %></p>
    <p><b>Published:</b> <%= listing.year %></p>
    <a href="https://en.wikipedia.org/wiki/<%= listing.title %>" target="_blank" class="btn btn-outline-primary mt-2">Read </a>
  </div>
</div>


  
  <div class="d-flex justify-content-center gap-3 mt-4">
    <a href="/library/<%= listing._id %>/edit" class="btn btn-dark px-4"> Edit</a>

    <form method="POST" action="/library/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger px-4">Delete</button>
    </form>
  </div>

</div>
